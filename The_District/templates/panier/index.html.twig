{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

	<div class="contenu" style="background-image:url('{{ asset('IMG/fond/bg3.jpeg') }}')">
		{# <h1 class="fst-italic text-center">Mon panier</h1> #}
		<main class="container mt-5">
			<div class="row">
				<div class="col-8">
                		<h2 class="fst-italic text-center text-white">Mon panier</h2>
					<table class="table text-white" id="formulaire">
						<thead>
							<tr>
								<th>Plat</th>
								<th>Prix</th>
								<th>Quantité</th>
								<th>Total</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{% for element in data %}
								<tr>
									<td>{{ element.plat.libelle }}</td>
									<td>{{ element.plat.prix }} €</td>
									<td>{{ element.quantite }}</td>
									<td>{{ element.quantite * element.plat.prix }} €</td>
									<td>
										<a href="{{ path('panier_retirer', {id: element.plat.id }) }}" class="btn btn-danger">-</a>
										<a href="{{ path('panier_ajout', {id: element.plat.id }) }}" class="btn btn-success">+</a>
										<a href="{{ path('panier_supprimer', {id: element.plat.id }) }}" class="btn btn-secondary">Suppr</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">Le panier est vide</td>
								</tr>
							{% endfor %}
						</tbody>
						<tfoot>
							<tr>
								<td colspan="3">Total</td>
								<td colspan="1">
									<b>{{ total }} €</b>
								</td>
								<td colspan="">
									<a href="#" class="btn btn-secondary">Supprimer ma commande</a>
								</td>
							</tr>
						</tfoot>
					</table>
                    <a href="{{ path('app_commande_ajout') }}" class="btn btn-primary">Valider ma commande</a>
				</div>
			</main>
		</div>
		{% include "partials/footer.php" %}
	{% endblock %}
